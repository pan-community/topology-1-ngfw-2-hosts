<div>
<br/>
<h4>Azure Topology Elements</h4>
<br/>

<h5 style="display: inline;">Resource Group: </h5>{{ context["resource_group_name"] }}

<br/>
<br/>
<br/>

<h5>Public IP Addresses</h5>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Device</th>
            <th>IP Address</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>NGFW Management Interface</td>
            <td>{{ context["ngfw_ip_address"]["ip_address"] }}</td>
        </tr>
        <tr>
            <td>Ubuntu Internal Host</td>
            <td> {{ context["client_01_ip_address"]["ip_address"] }}</td>
        </tr>
        <tr>
            <td>Ubuntu DMZ Host</td>
            <td> {{ context["client_02_ip_address"]["ip_address"] }}</td>
        </tr>
    </tbody>
</table>

<br/>
<br/>

<h5>Sandbox Private IP Addresses</h5>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Device</th>
            <th>Interface</th>
            <th>IP Address</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>NGFW Internet Interface</td>
            <td>ethernet1/1</td>
            <td>{{ context["fw_untrust_ip"] ~ "/" ~ context["untrust_subnet_cidr"].split('/')[1] }}</td>
        </tr>
        <tr>
            <td>NGFW Internet Interface</td>
            <td>ethernet1/2</td>
            <td>{{ context["fw_trust_ip"] ~ "/" ~ context["trust_subnet_cidr"].split('/')[1] }}</td>
        </tr>
        <tr>
            <td>NGFW DMZ Interface</td>
            <td>ethernet1/3</td>
            <td>{{ context["fw_dmz_ip"] ~ "/" ~ context["dmz_subnet_cidr"].split('/')[1] }}</td>
        </tr>
        <tr>
            <td>Ubuntu Internal Host</td>
            <td>firewall facing interface</td>
            <td>{{ context["client_01_trust_ip"] ~ "/" ~ context["trust_subnet_cidr"].split('/')[1] }}</td>
        </tr>
        <tr>
            <td>Ubuntu DMZ Host</td>
            <td>firewall facing interface</td>
            <td>{{ context["client_02_dmz_ip"] ~ "/" ~ context["dmz_subnet_cidr"].split('/')[1] }}</td>
        </tr>
    </tbody>
</table>

</div>